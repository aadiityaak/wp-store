{
  "name": "wp-store",
  "version": "0.1.0",
  "private": true,
  "description": "Build tooling for WP Store frontend assets",
  "scripts": {
    "build:vendor": "esbuild assets/frontend/js/vendor.js --bundle --format=iife --outfile=assets/frontend/js/vendor.bundle.js",
    "watch:vendor": "esbuild assets/frontend/js/vendor.js --bundle --format=iife --outfile=assets/frontend/js/vendor.bundle.js --watch",
    "build": "npm run build:vendor"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "dependencies": {
    "flickity": "^2.3.0"
  }
}
